{
  // Font and appearance
  "editor.fontFamily": "JetBrains Mono, 'FiraCode Nerd Font', 'Fira Code', 'Menlo', 'Monaco', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "workbench.colorTheme": "Dracula Theme Soft",
  // Editor behavior
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.minimap.enabled": false,
  // Terminal
  "terminal.integrated.fontFamily": "JetBrains Mono, 'FiraCode Nerd Font', 'Fira Code', 'Menlo', 'Monaco', 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.minimumContrastRatio": 1,
  // Vim settings
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  // Vim plugin equivalents
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.commentary": true,
  "vim.highlightedyank": true,
  "vim.incsearch": true,
  // fzf settings
  "fzf.enable": true,
  "fzf.preview": true,
  "fzf.includeHidden": true,
  "fzf.ignoreFiles": [
    ".git",
    "node_modules",
    "dist",
    "build"
  ],
  // File Utils settings
  "fileutils.autoRefresh": true,
  "fileutils.confirmDelete": true,
  "fileutils.confirmMove": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "Y"],
      "after": ["\"", "+", "Y"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["\"", "+", "P"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "+", "d"]
    },
    {
      "before": ["<leader>", "D"],
      "after": ["\"", "+", "D"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "f", "S"],
      "commands": [":wa"]
    },
    // fzf keybindings
    {
      "before": ["<leader>", "f"],
      "commands": [":FZF"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": [":Buffers"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": [":History"]
    },
    // Terminal focus (like IdeaVim's <Leader>ot)
    {
      "before": ["<leader>", "o", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    // Recent files (like IdeaVim's <Leader>.)
    {
      "before": ["<leader>", "."],
      "commands": ["workbench.action.quickOpenRecent"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-u>": true,
    "<C-f>": true,
    "<C-b>": true
  },
  // Alternative approach using which-key style
  "vim.whichKey": true,
  "vim.whichKey.bindings": {
    "<leader>": {
      "o": {
        "t": "workbench.action.terminal.focus"
      },
      ".": "workbench.action.quickOpenRecent"
    }
  },
  // Misc
  "explorer.confirmDelete": false
}
